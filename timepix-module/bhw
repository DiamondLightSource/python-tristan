#%Module1.0

proc ModulesHelp { } {
  puts stderr "Loads tools for event-mode data collection on I19"
}
module-whatis "Loads tools for event-mode data collection on I19"

while module load python/3 {
    if {is-loaded python/3} break
}
while module load hdf5 {
    if {is-loaded hdf5} break
}
while module load i19 {
    if {is-loaded i19} break
}

setenv TIMEPIX_I19 /dls_sw/i19/scripts/BeamlineScripts/timepix-i19
prepend-path PYTHONPATH $env(TIMEPIX_I19)
